<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlockDev</title>
    <link rel="stylesheet" href="~/lib/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Quiz.styles.css" asp-append-version="true" /> *@
</head>
<body style="background-image:url('@Url.Content("~/img/bg.jpg")'); background-repeat: no-repeat; background-attachment: fixed;">
    <header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <div class="container text-light">
            <a class="navbar-brand" asp-area="" asp-controller="q1" asp-action="Index">BlockDev</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="q1" asp-action="Profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="q1" asp-action="Company">Company</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="q1" asp-action="Service">Service</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="q1" asp-action="Collaboration">Collaboration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar -->

    <!-- Background image -->
    <div id="intro-example" class="p-5 text-center bg-image">
        <div class="d-flex justify-content-center align-items-center h-100 text-center">
            <div class="text-white">
            <h1 class="mb-3 display-2 fw-bold">BLOCKDEV</span></h1>
            <h5 class="mb-4">@ViewData["Desc"]</h5>
            <a class="btn btn-outline-light btn-lg m-2" href='#@ViewData["Detail"]' role="button">Read More</a>
            </div>
        </div>
    </div>
    <!-- Background image -->
    </header>
    <button type="button" class="btn btn-danger btn-floating btn-lg" id="btn-back-to-top">
        <i class="fas fa-arrow-up"></i>
    </button>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light">
        <p class="text-center mt-3">All right reserved &copy; @DateTime.Now.Year.ToString() - BlockDev</p>
    </footer>
    <script src="~/lib/jquery-3.2.1.slim.min.js"></script>
    <script src="~/lib/popper.min.js"></script>
    <script src="~/lib/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
